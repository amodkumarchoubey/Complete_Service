<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f7e7"
    android:padding="6dp">

    <TextView
        android:id="@+id/txt_setdata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/_45sdp"
        android:gravity="center"
        android:background="@drawable/circle"
        android:text="Random No:"
        android:textStyle="bold"
        android:textSize="@dimen/_35sdp" />

    <TextView
        android:id="@+id/buttonStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_25sdp"
        android:gravity="center"
        android:background="@drawable/circle"
        android:text="@string/start_service"
        android:textAllCaps="true"
        android:layout_below="@+id/txt_setdata"
        android:textSize="@dimen/_25sdp" />

    <TextView
        android:id="@+id/buttonStop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonStart"
        android:layout_marginTop="@dimen/_25sdp"
        android:gravity="center"
        android:background="@drawable/circle"
        android:text="@string/stop_service"
        android:textAllCaps="true"
        android:textSize="@dimen/_25sdp" />

    <TextView
        android:id="@+id/buttonbindservices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonStop"
        android:layout_marginTop="@dimen/_25sdp"
        android:gravity="center"
        android:background="@drawable/circle"
        android:text="@string/bind_service"
        android:textAllCaps="true"
        android:textSize="@dimen/_25sdp" />

    <TextView
        android:id="@+id/buttonunbindservices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonbindservices"
        android:layout_marginTop="@dimen/_25sdp"
        android:gravity="center"
        android:background="@drawable/circle"
        android:text="@string/unbind_service"
        android:textAllCaps="true"
        android:textSize="@dimen/_25sdp" />

    <TextView
        android:id="@+id/buttonrandomnumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonunbindservices"
        android:layout_marginTop="@dimen/_25sdp"
        android:gravity="center"
        android:text="@string/getramdomnumber"
        android:background="@drawable/circle"
        android:textAllCaps="true"
        android:textSize="@dimen/_25sdp" />
</RelativeLayout>